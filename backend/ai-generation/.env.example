# AI Image Generation Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
AI_GEN_OPENAI_API_KEY=sk-proj-YOUR_API_KEY_HERE

# Image Generation Settings
# Valid sizes: 1024x1024, 1792x1024, 1024x1792
AI_GEN_IMAGE_SIZE=1024x1024

# Valid quality: standard, hd
AI_GEN_IMAGE_QUALITY=standard

# Storage Configuration
# Path where generated images will be saved (relative to backend/ai-generation/)
AI_GEN_STORAGE_PATH=./output/generated

# Logging Configuration
# Valid levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
AI_GEN_LOG_LEVEL=INFO

# Retry Configuration (optional)
# Maximum number of retry attempts for failed generations
# AI_GEN_MAX_RETRIES=3
